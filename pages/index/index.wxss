/* */
.container {
  width: 100%;
  padding: 0 26rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.container .address {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 26rpx 0;
}
.container .address .text {
  margin-left: 30rpx;
  
}
.container .address .text::after {
  content: ' ';
  display: inline-block;
  margin-left: 20rpx;
  width: 16px;
  height: 16px;
  border-top: 2px solid #cccccc;
  border-left: 2px solid #cccccc;
  transform: rotate(-135deg)
}
.container .banner {
  padding:25rpx;
  border-top: 3px dashed green;
  border-bottom: 3px dashed green;
}
.container .swiper {
  color:red;
  background-color: cyan;
  
}
.container .func {
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 30rpx;
}
.container .func .func-list {
  width: 30%;
  border: 2rpx solid #ddd;
  border-radius: 6rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.container .func .hover {
  background-color: #f0f0f0;
  box-shadow: 0 0 4rpx 2rpx rgba(0, 0, 0, 0.2)
}
.container .func .func-list .text-list{
  font-size: 30rpx;
}
.container .func .func-list .text-list::after {
  content: ' ';
  display: block;
  width: 40rpx;
  margin-top: 16rpx;
  border-bottom: 6rpx solid green;
}
.container .func .func-list .icon {
  text-align: center;
  margin-top: 80rpx;
}